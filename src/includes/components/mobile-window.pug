                a.mobile-menu__logo(href="") 
                    img.mobile-menu__logo-img(src="./images/header/logo.png" alt="Logo image") 
                svg.mobile-menu__close(width="14", height="14") 
                    use(href="./images/header/close.svg#close-icon", id="mob-menu-close")
